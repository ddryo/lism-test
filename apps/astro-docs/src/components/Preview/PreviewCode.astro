---
import { TabItem, Layouter } from '@loos/lism-astro';

// Propsの定義
interface Props {
	label?: string;
	[prop: string]: any;
}
const { label, ...props } = Astro.props || {};
---

{
	label && (
		<TabItem label={label} {...props}>
			<slot />
		</TabItem>
	)
}
{
	!label && (
		<Layouter className='c--preview_code' {...props}>
			<slot />
		</Layouter>
	)
}
