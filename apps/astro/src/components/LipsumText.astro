---
import { Text } from '@loos/lism-core';
const { size, medium = false, long = false, ...props } = Astro.props;

let textSize = size;
if (long) {
	textSize = 'long';
} else if (medium) {
	textSize = 'medium';
}
---

<Text {...props}>
	{
		textSize === 'long' ? (
			<>
				Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet ab commodi rerum
				voluptas iusto dolores numquam cum ratione, dignissimos quia recusandae assumenda
				magnam, molestiae necessitatibus quas minus, quod consectetur pariatur.
			</>
		) : textSize === 'medium' ? (
			<>
				Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet ab commodi rerum
				voluptas iusto dolores numquam cum ratione, dignissimos
			</>
		) : (
			<>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</>
		)
	}
</Text>
