{
	"name": "lism-wp",
	"version": "0.0.1",
	"description": "",
	"main": "index.js",
	"private": true,
	"scripts": {
		"start": "wp-scripts start",
		"_build": "npm run build:block && npm run build:css && npm run po2json",
		"wp-env": "wp-env",
		"wp-scripts": "wp-scripts",
		"env-restart": "wp-env start",
		"env-start": "wp-env start && opener http://localhost:8888",
		"env-stop": "wp-env run cli wp db export sql/local.sql && wp-env stop",
		"env-inport": "wp-env run cli wp db inport",
		"build:scripts": "npm run build:blocks && npm run build:icons && npm run build:js",
		"build:css": "node node-sass.js && npm run build:css:blocks",
		"build:css:blocks": "cross-env TYPE=blocks node node-sass.js",
		"build:css:front": "cross-env TYPE=front node node-sass.js",
		"build:blocks": "wp-scripts build",
		"build:blocks:dev": "npx webpack --mode=development",
		"build:js": "wp-scripts build --config webpack.config.js.js",
		"build:js:dev": "npx webpack --config webpack.config.js.js",
		"build:js:front": "cross-env TYPE=front npx webpack",
		"build:icons": "wp-scripts build --config webpack.config.icons.js",
		"build:icons:dev": "wp-scripts start --config webpack.config.icons.js",
		"build:json": "node node-json-merge.js",
		"po2json": "po2json languages/lism-ja.po languages/lism-ja-lism-lang.json -f jed",
		"clear-cache": "rm -rf node_modules/.cache/hard-source/",
		"update": "bash ./bin/zip.sh"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/plugin-syntax-jsx": "^7.22.5",
		"@babel/preset-env": "^7.23.2",
		"@babel/preset-react": "^7.22.15",
		"@loos/lism-core": "workspace:*",
		"@phosphor-icons/react": "^2.0.10",
		"@wordpress/env": "^8.9.0",
		"@wordpress/icons": "^9.34.0",
		"@wordpress/scripts": "^26.14.0",
		"@wordpress/stylelint-config": "^21.26.0",
		"classnames": "^2.3.2",
		"deepmerge": "^4.3.1",
		"glob": "^10.3.10",
		"po2json": "^1.0.0-beta-3"
	}
}
