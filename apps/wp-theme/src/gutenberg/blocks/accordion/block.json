{
	"apiVersion": 3,
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "lism-blocks/accordion",
	"title": "Accordion",
	"category": "lism-blocks",
	"supports": {
		"anchor": true,
		"className": false,
		"color": {
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		}
	},
	"attributes": {
		"summaryText": {
			"type": "string",
			"source": "html",
			"selector": ".c--accordion__label"
		},
		"iconPosition": {
			"type": "string",
			"enum": ["left", "right"],
			"default": "right"
		},
		"openIconSlug": {
			"type": "string"
		},
		"closeIconSlug": {
			"type": "string"
		},
		"isTriggerIcon": {
			"type": "boolean",
			"default": false
		},
		"headerElement": {
			"type": "string",
			"enum": ["h1", "h2", "h3", "h4", "h5", "h6"]
		}
	},
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js",
	"textdomain": "lism-blocks"
}
