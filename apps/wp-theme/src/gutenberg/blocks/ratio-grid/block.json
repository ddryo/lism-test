{
	"apiVersion": 3,
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"name": "lism-blocks/ratio-grid",
	"title": "Ratio Grid",
	"category": "lism-blocks",
	"keywords": ["group"],
	"supports": {
		"anchor": true,
		"className": false,
		"align": ["wide", "full"],
		"color": {
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		}
	},
	"attributes": {
		"templateLock": {
			"type": ["string", "boolean"],
			"enum": ["all", "insert", "contentOnly", false]
		},
		"tagName": {
			"type": "string",
			"default": "div"
		},
		"gap": {
			"type": "string"
		},
		"textAlign": {
			"type": "string"
		},
		"ratio": {
			"type": ["string", "array"]
		},
		"alignItems": {
			"type": "string",
			"default": "stretch"
		},
		"justifyItems": {
			"type": "string",
			"default": "stretch"
		}
	},
	"editorScript": "file:./index.js",
	"textdomain": "lism-blocks"
}
