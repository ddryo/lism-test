---
import { LismProps } from '../types';
import { Layouter } from '../Core';
import { Icon } from '../Icon';
import { SideFlex } from '../Flex';
import getProps from '@loos/lism-core/src/components/Alert/getProps';

// const _default = defaultProps?.Alert || {};

// Propsの定義
interface Props extends LismProps {
	as?: any;
	tag?: string;
}

let {
	lismClass = {},
	// lismStyle = {},
	isFlow,
	variant,
	...props
} = Astro.props || {};

lismClass.c = 'c--alert';
if (variant) lismClass.c += ` c--alert--${variant}`;

const { icon, iconProps, ...alertProps } = getProps(props);
---

<SideFlex side='first' lismClass={lismClass} {...alertProps}>
	{icon && <Icon lismClass={{ c: 'c--alert__icon' }} icon={icon} {...iconProps} />}
	<Layouter className='c--alert__body' isFlow={isFlow}>
		<slot />
	</Layouter>
</SideFlex>
