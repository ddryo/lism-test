---
import { LismProps } from '../types';
import { Layouter } from '../Core';

// Propsの定義
interface Props extends LismProps {}

const { lismClass = {}, variant, ...props } = Astro.props || {};
lismClass.l = 'l--box';
if (variant) lismClass.l += ` l--box--${variant}`;
---

<Layouter lismClass={lismClass} {...props}><slot /></Layouter>
