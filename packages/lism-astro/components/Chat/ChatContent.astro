---
import { LismProps } from '../types';
import { Layouter } from '../Core';
import { Decorator } from '../Decorator';

import { getContentProps, getDecoProps } from '@loos/lism-core/src/components/Chat/getProps';

interface Props extends LismProps {}

let {
	direction = 'start',
	variant = 'speak',
	isFlow,
	contentProps = {},
	...props
} = Astro.props || {};
---

<Layouter _lismClass={['c--chat__body']} {...props}>
	{
		('speak' === variant || 'think' === variant) && (
			<Decorator {...getDecoProps(direction, variant)} />
		)
	}
	<Layouter
		_lismClass={['c--chat__content']}
		isFlow={isFlow}
		{...getContentProps(direction, variant, contentProps)}
	>
		<slot />
	</Layouter>
</Layouter>
