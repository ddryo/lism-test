---
import { LismProps } from './types';
import { getLismProps, getAllLayoutStateData } from '@loos/lism-core/lib';

// Propsの定義
interface Props extends LismProps {
	as?: any;
	tag?: string;
}
const { as, tag, ...otherProps } = Astro.props || {};

// LismPropsから各attrsを生成
const lismProps = getLismProps(getAllLayoutStateData(otherProps));

const JSX = as || tag || 'div';
---

<JSX {...lismProps}>
	<slot />
</JSX>
