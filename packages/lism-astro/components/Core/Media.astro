---
import { LismProps } from '../types';
import Element from './Element.astro';
import { getMediaProps } from '@loos/lism-core/lib';

// Propsの定義
interface Props extends LismProps {
	src?: string;
	alt?: string;
	width?: string | number;
	height?: string | number;
}

const props = getMediaProps(Astro.props || {});
---

<Element tag='img' {...props}>
	<slot />
</Element>
