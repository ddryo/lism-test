---
import { LismProps } from '../types';
import Flex from './Flex.astro';
import { getSideFlexProps } from '@loos/lism-core/src/components/Flex/getProps';

// Propsの定義
interface Props extends LismProps {
	side?: 'first' | 'last';
	sideW?: string | number;
	mainMinW?: string | number;
}

let { side = 'last', ...props } = Astro.props || {};
---

<Flex _flex='sideFlex' data-side={side} {...getSideFlexProps(props)}>
	<slot />
</Flex>
