---
import { LismProps } from '../types';
import { Layouter } from '../Core';
import { getGridProps } from '@loos/lism-core/lib';

// Propsの定義
interface Props extends LismProps {
	_grid?: string;
}

let { _grid = 'grid', variant, lismClass = {}, ...props } = Astro.props;

lismClass.l = `l--${_grid}`;
if (variant) {
	lismClass.l += ` l--${_grid}--` + variant;
}

// grid 系の props をまとめる
props = getGridProps(props);
---

<Layouter lismClass={lismClass} {...props}>
	<slot />
</Layouter>
