---
import { LismProps } from '../types';
import { Core } from '../Core';
import { getGridItemProps } from '@loos/lism-core/lib';

// Propsの定義
interface Props extends LismProps {
	isSide?: boolean;
}

let { as, lismState = [], isSide, ...props } = Astro.props;

const TheComponent = as || Core;

// grid 系の props をまとめる
props = getGridItemProps(props);

if (isSide) {
	lismState.push('is--side');
}
---

<TheComponent lismState={lismState} {...props}>
	<slot />
</TheComponent>
