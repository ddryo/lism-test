---
import Layouter from '../Layouter.astro';
export interface Props {
	label: string | number;
}
const { label = '', ...props } = Astro.props;
---

<lism-placeholder-tabitem>
	<lism-placeholder-tablabel>
		{Astro.slots.has('label') && <slot name='label' />}
		{!Astro.slots.has('label') && label}
	</lism-placeholder-tablabel>
	<Layouter tag='lism-placeholder-tabpanel' lismClass={{ c: 'c--tab__panel' }} {...props}>
		<slot />
	</Layouter>
</lism-placeholder-tabitem>
