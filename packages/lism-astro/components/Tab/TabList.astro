---
import { LismProps } from '../types';
import { Layouter } from '../Core';
import { Flex } from '../Flex';

export interface Props extends LismProps {}
const { as, lismClass = {}, variant, ...props } = Astro.props;

const TabList = as || Flex;

lismClass.c = 'c--tabs_list';
if (variant) lismClass.c += ` c--tabs_list--${variant}`;
---

<TabList lismClass={lismClass} jc='s' role='tablist' {...props}>
	<slot />
</TabList>
