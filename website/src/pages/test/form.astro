---
import PlainLayout from '~/layouts/PlainLayout.astro';

import Checkbox from '~/components/test/Checkbox.astro';
import RadioButton from '~/components/test/RadioButton.astro';
---

<PlainLayout>
	<h2 id='form_elements'>Forms</h2>

	<fieldset class='is--flow'>
		<legend>Legend</legend>
		<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</p>
		<form class='is--flow'>
			<p>
				<label for='text_field'>Text Field:</label>
				<input type='text' id='text_field' />
			</p>
			<p>
				<label for='text_readonly'>readonly Field:</label>
				<input type='text' id='text_readonly' readonly value='readonly' />
			</p>
			<p>
				<label for='text_disabled'>disabled Field:</label>
				<input type='text' id='text_disabled' disabled />
			</p>
			<p>
				<label for='text_area'>Text Area:</label>
				<br />
				<textarea id='text_area'></textarea>
			</p>
			<p>
				<label for='select_element'>Select Element:</label><br />
				<select name='select_element'>
					<optgroup label='Option Group 1'>
						<option value='1'>Option 1</option>
						<option value='2'>Option 2</option>
						<option value='3'>Option 3</option>
					</optgroup>
					<optgroup label='Option Group 2'>
						<option value='1'>Option 1</option>
						<option value='2'>Option 2</option>
						<option value='3'>Option 3</option>
					</optgroup>
				</select>
			</p>
			<p>
				Radio Buttons:<br />
				<RadioButton name='radios' id='radiobtn-1' value='radio-1'>Radio 1</RadioButton>
				<br />
				<RadioButton name='radios' id='radiobtn-2' value='radio-2'>Radio 2</RadioButton>
				<br />
				<RadioButton name='radios' id='radiobtn-3' value='radio-3'>Radio 3</RadioButton>
			</p>

			<p>
				Checkboxes:<br />
				<Checkbox name='checkboxes' id='checkbox-1' value='check-1'>Check 1</Checkbox>
				<br />
				<Checkbox name='checkboxes' id='checkbox-2' value='check-2'>Check 2</Checkbox>
				<br />
				<Checkbox name='checkboxes' id='checkbox-3' value='check-3'>Check 3</Checkbox>
			</p>
		</form>
		<p>
			<label for='password'>Password:</label>
			<br />
			<input type='password' class='password' name='password' />
		</p>
		<p>
			<label for='file'>File Input:</label>
			<br />
			<input type='file' class='file' name='file' />
		</p>
		<p>
			<input type='color' id='color' name='color' value='#e66465' />
			<label for='color'> Color</label>
		</p>
		<p>
			<input type='range' id='range' name='range' min='0' max='11' />
			<label for='range'> Range</label>
		</p>
		<p>
			<button type='button'>button</button>
			<input class='button' type='reset' value='Clear' />
			<input class='button' type='submit' value='Submit' />
		</p>
		<div role='button' class='button'>role="button"</div>
	</fieldset>
</PlainLayout>
